  <!-- Overlay quando DevTools é detectado -->
  <div id="guard" class="guard" role="dialog" aria-modal="true" aria-live="assertive">
    <div class="box">
      <h3>Área protegida</h3>
      <p>Tentativa de inspeção detectada. Para sua segurança e da plataforma, o conteúdo foi ocultado.</p>
    </div>
  </div>

  <script>
    // Ano no rodapé
    document.getElementById('y').textContent = new Date().getFullYear();

    // Bloqueios básicos
    const kill = ev => { ev.preventDefault(); ev.stopPropagation(); return false; };

    // Bloqueia menu de contexto (clique direito)
    addEventListener('contextmenu', kill, {capture:true});

    // Bloqueia arrastar/soltar
    addEventListener('dragstart', kill, true);
    addEventListener('drop', kill, true);

    // Bloqueia teclas comuns de cópia/inspeção/salvar
    addEventListener('keydown', (e) => {
      const k = (e.key||'').toLowerCase();
      if (
        k === 'f12' ||
        (e.ctrlKey && ['u','s','p','c','x','v','a'].includes(k)) ||
        (e.metaKey && ['u','s','p','c','x','v','a'].includes(k)) ||
        (e.ctrlKey && e.shiftKey && ['i','j','c'].includes(k)) ||
        (e.metaKey && e.altKey && ['i','j','c'].includes(k))
      ) { kill(e); }
    }, true);

    // Anti seleção global (volta a permitir dentro de inputs, se existirem)
    const noSelectCSS = `
      *::selection { background: transparent !important; }
      ::-moz-selection { background: transparent !important; }
      body *:not(input):not(textarea) { -webkit-user-select: none !important; user-select: none !important; }
    `;
    const style = document.createElement('style'); style.textContent = noSelectCSS; document.head.appendChild(style);

    // Detecção simples de DevTools (largura/altura + tempo)
    let openFlag = false;
    const guard = document.getElementById('guard');
    function checkDevtools() {
      // Heurísticas simples (não infalíveis)
      const threshold = 160; // barra de devtools comum
      const suspicious = (outerWidth - innerWidth > threshold) || (outerHeight - innerHeight > threshold);
      if (suspicious && !openFlag) {
        openFlag = true;
        guard.style.display = 'flex';
        document.documentElement.style.filter = 'blur(2px)';
        // Desativa interação
        ['click','keydown','keyup','pointerdown','pointerup','contextmenu'].forEach(t => addEventListener(t, kill, true));
      }
    }
    setInterval(checkDevtools, 600);

    // Pequena ofuscação de strings sensíveis (exemplo simples)
    // Evita "buscar no HTML" por palavras comuns
    (function(){
      const map = { w:'wa', dot:'.', me:'me', slash:'/' };
      // Exemplo de reconstrução preguiçosa (não precisa pois já colocamos href estático)
      // Mantido como demonstração para futuras rotas secretas.
    })();
  </script>
