    .nav{display:flex;align-items:center;justify-content:space-between;padding:16px 0}
    .logo{display:flex;align-items:center;gap:.8rem}
    .badge{width:36px;height:36px;border-radius:12px;background:radial-gradient(100% 100% at 30% 30%,#00ffd0 0%,#1affb6 30%,#0bff80 55%,#003);box-shadow:0 0 20px rgba(0,255,208,.35)}
    .brand{font-weight:800;letter-spacing:.2px}
    .brand i{color:var(--brand)}
    .hero{padding:28px 0 8px}
    .panel{background:linear-gradient(180deg,#0f131a,#0b0f15 60%);border:1px solid #141b24;border-radius:var(--radius);box-shadow:var(--shadow);padding:28px}
    .status{display:inline-flex;align-items:center;gap:.5rem;background:#0f1720;border:1px solid #16202b;color:#b8c4d6;border-radius:999px;padding:.45rem .9rem;font-size:.9rem}
    .dot{width:8px;height:8px;border-radius:999px;background:#24d37a;box-shadow:0 0 10px #24d37a}
    h1{font-size:clamp(1.8rem,3.5vw,2.8rem);line-height:1.15;margin:18px 0 8px}
    p.lead{color:var(--muted);font-size:clamp(1rem,1.6vw,1.125rem)}
    .btns{display:flex;gap:.8rem;flex-wrap:wrap;margin-top:18px}
    .btn{display:inline-flex;align-items:center;justify-content:center;gap:.5rem;padding:.95rem 1.25rem;border-radius:14px;border:1px solid #16202b;background:linear-gradient(90deg,#06131a,#0b1823);color:#eaf2ff;font-weight:700;box-shadow:var(--shadow);transform:translateZ(0)}
    .btn.primary{background:linear-gradient(90deg,#00ffd0,#59a5ff)}
    .btn:hover{transform:translateY(-1px)}
    /* Seções */
    section{padding:28px 0}
    .card{background:linear-gradient(180deg,#0f131a,#0b0f15 60%);border:1px solid #141b24;border-radius:16px;box-shadow:var(--shadow);padding:18px}
    .grid{display:grid;gap:18px}
    @media (min-width:840px){.grid.cols-3{grid-template-columns:repeat(3,1fr)}}
    footer{padding:28px 0;color:#8fa3b8}
    /* Aviso/Watermark invisível (anti-cópia leve) */
    .wm{position:fixed;inset:0;pointer-events:none;opacity:.06;background:
      repeating-linear-gradient(90deg,transparent 0 240px,rgba(255,255,255,.04) 240px 242px),
      repeating-linear-gradient(0deg,transparent 0 240px,rgba(255,255,255,.04) 240px 242px);
      mix-blend-mode:overlay;z-index:0}
    .guard{position:fixed;inset:0;background:rgba(11,14,18,.96);backdrop-filter:blur(6px);display:none;align-items:center;justify-content:center;z-index:9999}
    .guard .box{background:#0f131a;border:1px solid #202938;border-radius:16px;padding:22px 18px;box-shadow:var(--shadow);max-width:560px;text-align:center}
    .guard h3{margin:0 0 6px}
    .guard p{color:#b8c4d6;margin:0}
    /* Anti seleção/drag no conteúdo */
    main, header, footer, section, .panel, .card, h1, h2, p, .btn, .logo, .status {
      -webkit-user-select:none; user-select:none; -webkit-user-drag:none;
    }
    /* Acessibilidade: inputs (se existirem) podem selecionar */
    input,textarea{user-select:text}
    /* No-JS overlay */
    noscript .needjs{display:none}
    noscript .nojs{display:block}
    .nojs{display:none;position:fixed;inset:0;z-index:99999;background:#0b0e12;color:#e8f0ff;padding:24px}
  </style>
